{
  "name": "@pull/contracts",
  "version": "1.0.0",
  "description": "PULL Token Smart Contracts - ERC-20 token, staking, vesting, and rewards",
  "license": "MIT",
  "author": "PULL Team",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "contracts",
    "artifacts",
    "typechain-types",
    "dist"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "build": "hardhat compile && tsc",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:amoy": "hardhat run scripts/deploy.ts --network polygonAmoy",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "verify": "hardhat verify",
    "clean": "hardhat clean && rm -rf dist typechain-types cache artifacts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,sol,json}\"",
    "format:check": "prettier --check \"**/*.{ts,sol,json}\"",
    "typecheck": "tsc --noEmit",
    "node": "hardhat node",
    "console": "hardhat console"
  },
  "devDependencies": {
    "@fireblocks/hardhat-fireblocks": "^1.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "chai": "^6.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "ethers": "^6.11.0",
    "hardhat": "^3.1.5",
    "hardhat-gas-reporter": "^2.0.0",
    "prettier": "^3.2.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
