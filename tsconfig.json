{
  "extends": "./packages/config/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pull/types": ["packages/types/src"],
      "@pull/types/*": ["packages/types/src/*"],
      "@pull/core": ["packages/core/src"],
      "@pull/core/*": ["packages/core/src/*"],
      "@pull/db": ["packages/db"],
      "@pull/db/*": ["packages/db/*"],
      "@pull/ui": ["packages/ui/src"],
      "@pull/ui/*": ["packages/ui/src/*"],
      "@pull/config": ["packages/config"],
      "@pull/config/*": ["packages/config/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "coverage"]
}
